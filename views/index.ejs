  <style>
    * {
  margin: 0%;
  padding: 0%;
  box-sizing: border-box;
  font-family: gilroy;
}
html,
body {
  width: 100%;
  height: 100%;
}
.cointainer {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  background-color: #1f1b1b2f;
  justify-content: center;
}
.page {
  position: relative;
  background-color: #fff;
  width: 31%;
  overflow: hidden;
  height: 100%;
  border-radius: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.page #cross{
    width: 25px;
    position: absolute;
    top: 3%;
    left: 90%;
}
.page img {
  width: 40px;
}
.page #input1,#input2,#input3 {
  padding: 13px;
  width: 60%;
  border-radius: 17px;
  border: 1px solid rgb(109, 109, 109);
}
#or {
  padding: 10px;
}
.page form {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 5px;
  flex-direction: column;
  width: 100%;
}
#label1 {
  margin-left: -48%;
  margin-top: 30px;
}
#label2 {
  margin-left: -30%;
}
#label3 {
  margin-left: -37%;
}
.page button {
  padding: 13px;
  width: 60%;
  border-radius: 20px;
  background-color: #f93636;
  color: white;
  font-size: 15px;
  font-weight: 800;
}
.facebook {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #3b6fff;
  color: white;
  border-radius: 20px;
  width: 60%;
  gap: 10px;
}
.google {
  margin-top: 6px;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1px solid black;
  border-radius: 20px;
  width: 60%;
  gap: 40px;
  font-size: 14px;
}
.google img {
  padding: 5px;
  width: 40px;
}
.page p {
  margin-top: 15px;
  width: 55%;
  text-align: center;
  word-spacing: 3px;
  line-height: 1;
  font-size: 12px;
  font-weight: 500;
}
p a {
  font-weight: 800;
  text-decoration: none;
  color: black;
}
.bussiness {
  width: 100%;
  bottom: -2%;
  padding: 20px;
  background-color: #83838374;
  color: white;
  position: absolute;
  text-align: center;
}

